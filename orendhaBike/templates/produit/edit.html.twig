{% extends "base.html.twig" %}


 {% block title %}

 {% endblock %}

{% block body %}
    {# Voir la doc pour les form row etc #}

    <div class="container">
        <h1 >Editer un produit</h1>
        {{ form_start(formView) }}
        {{ form_errors(formView) }}
        <div class="row">
            <div class="col">
                {{ form_row(formView.name) }}
                {{ form_row(formView.price) }}
            </div>
            <div class="col">
                {{ form_row(formView.mainPicture) }}
                {{ form_row(formView.categorie) }}
                {{ form_row(formView.descriptionCourte) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Modifier un produit</button>

    {{ form_end(formView) }}
    </div>
{% endblock %}